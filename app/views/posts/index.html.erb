<div class="page-header">
  <h1>Latest News</h1>
</div>
<%= render 'controls' %>
<div class="infinite-table">
  <div id="posts" class="page">
    <% cache(cache_key_for_posts) do %>
      <%= render @posts %>
    <% end %>
  </div>
  <p class="pagination">
    <%= link_to_next_page(@posts, 'Next Page', remote: true, params: { q: params[:q] }) %>
  </p>
</div>
