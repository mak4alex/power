<div class="page-header">
  <h1>Edit <%= resource_name.to_s.humanize %></h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :horizontal_form, html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <%= f.input :email, autofocus: true %>

  <%= f.input :name %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <%= f.input :password, hint: "leave blank if you don't want to change it", autocomplete: "off" %>

  <%= f.input :password_confirmation, autocomplete: "off" %>

  <%= f.input :current_password, required: true, hint: 'we need your current password to confirm your changes', autocomplete: "off" %>
 
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.button :submit, 'Update', class: 'btn-primary' %>
      <%= link_to "Cancel my account", registration_path(resource_name), class: 'btn btn-danger pull-right', 
        data: { confirm: "Are you sure?" }, method: :delete %>
    </div>
  </div>

<% end %>
